<?xml version="1.0" encoding="utf-8"?>
<Patch>
<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Weapons Expanded - Heavy Weapons</li>
        </mods>
        <match Class="PatchOperationSequence">
            <success>Always</success>
            <operations>
				  <li Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[
					defName="VWE_Gun_Autocannon" or 
					defName="VWE_Gun_HandheldMortar" or 
					defName="VWE_Gun_HeavyFlamer" or 
					defName="VWE_Gun_SwarmMissileLauncher" or 
					defName="VWE_Gun_UraniumSlugRifle"
					]/modExtensions/li[@Class = "HeavyWeapons.HeavyWeapon"]/supportedArmors</xpath>
                    <value>
						<li>WalkerGear_ArmourRecon_Core</li>
						<li>WalkerGear_AntiMaterial_Core</li>
						<li>WalkerGear_SeigeSupport_Core</li>
						<li>WalkerGear_FireSupport_Core</li>
						<li>WalkerGear_AntiTank_Core</li>
						<li>WalkerGear_UrbanCombat_Core</li>
						<li>WalkerGear_FlameThrower_Core</li>
                    </value>				
                </li>	
            </operations>
        </match>
    </Operation>
</Patch>